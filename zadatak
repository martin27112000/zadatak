	if (polja[0] == 'X' || polja[0] == 'O' || polja[1] == 'X' || polja[1] == 'O' || polja[2] == 'X' || polja[2] == 'O' || polja[3] == 'X' || polja[3] == 'O' || polja[4] == 'X' || polja[4] == 'O' || polja[5] == 'X' || polja[5] == 'O' || polja[6] == 'X' || polja[6] == 'O' || polja[7] == 'X' || polja[7] == 'O' || polja[8] == 'X' || polja[8] == 'O') {
